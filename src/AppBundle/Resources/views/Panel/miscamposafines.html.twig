{# app/Resources/views/Security/login.html.twig #}
{% extends 'base.home.html.twig' %}
{% block title %}{{ parent() }}| HOME{% endblock %}
{% block username %}
    {{ app.user.nombre }} {{ app.user.apellido }}
{% endblock %}
{% block body %}
    <div class="row mt-2">
        <div class="col-xs-12 col-sm-10 offset-md-1 col-md-8 offset-md-2 col-lg-8 offset-lg-2">
            <form action="" method="post" class="card needs-validation" id="formmiscamposafines">
                <div class="card-header bg-primary text-white py-2">
                    <button type="submit" title="Guardar | Actualizar" class="btn btn-sm float-right text-primary" style="background-color: whitesmoke;"><i class="fas fa-save fa-lg"></i></button>
                    <div class="card-title h5"><i class="fas fa-th"></i> Mis campos afines</div>
                </div>
                <div class="card-body row px-5">
                    {% for campoafin in camposAfines %}
                    <div class="custom-control custom-checkbox col-md-4  col-sm-6">
                        <input type="checkbox" name="camposafines[]" class="custom-control-input" value="{{ campoafin.getId() }}" id="campoafin-{{ campoafin.getId() }}">
                        <label class="custom-control-label" for="campoafin-{{ campoafin.getId() }}">{{ campoafin.getDescripcion() }}</label>
                    </div>
                    {% endfor %}
                </div>
            </form>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('assets/app/misCamposAfines.js') }}"></script>
{% endblock %}