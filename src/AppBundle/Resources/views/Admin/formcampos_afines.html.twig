{# app/Resources/views/Security/login.html.twig #}
{% extends 'base.home.html.twig' %}
{% block title %}{{ parent() }}| CAMPOS AFINES{% endblock %}
{% block username %}
    {{ app.user.nombre }} {{ app.user.apellido }}
{% endblock %}
{% block body %}
    <div class="row mt-2">
        <div class="col-xs-12 col-sm-10 offset-md-1 col-md-6 offset-md-3 col-lg-4 offset-lg-4">
            <div class="card">
                <div class="card-header text-center text-white bg-primary">
                    <a href="{{ path('camposafinespage') }}" class="close">
                        <span aria-hidden="true">&times;</span>
                    </a>
                    <div class="h5"><i class="fas fa-th fa-lg"></i> Registro Campos Afines</div>
                </div>
                {{ form_start(form,{'attr':{'class':'card-body'}})}}
                <div class="form-group">
                    {{ form_row(form.descripcion) }}
                </div>
                <div class="form-group">
                    <div class="row">
                        <div class="col-md-2 offset-8">
                            {{ form_row(form.Limpiar) }}
                        </div>
                        <div class="col-md-2">
                            {{ form_row(form.Guardar) }}
                        </div>
                    </div>
                </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}