{# app/Resources/views/Security/login.html.twig #}
{% extends 'base.home.html.twig' %}
{% block title %}{{ parent() }}| CAMPOS AFINES{% endblock %}
{% block username %}
    {{ app.user.nombre }} {{ app.user.apellido }}
{% endblock %}
{% block body %}
    <div class="row mt-2">
        <div class="col-xs-12 col-sm-10 offset-md-1 col-md-8 offset-md-2 col-lg-8 offset-lg-2">
            <div class="card">
                <div class="card-header text-left text-white bg-primary">
                    <div class="h5">
                        <i class="fas fa-th fa-lg"></i> Listados de Campos Afines
                        <a class="btn text-primary btn-sm float-right" style="background-color: whitesmoke;" href="{{ path('nuevocamposafinespage') }}"><i class="fa fa-plus fa-lg"></i></a>
                    </div>
                </div>
                <div class="card-body">
                    <table class="table table-sm table-hover table-striped">
                        <thead>
                        <tr>
                            <th>ID</th>
                            <th>Descripci√≥n</th>
                            <th>Controles</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for campoafin in campos_afines %}
                            <tr>
                                <td width="20%">{{ campoafin.id }}</td>
                                <td width="60%">{{ campoafin.descripcion }}</td>
                                <td width="20%">
                                    <a href="{{ path('campo_afin_edit', { id:campoafin.id }) }}" class="btn btn-link btn-sm btn-primary"><i class="fa fa-edit fa-lg"></i></a>
                                    <a href="{{ path('campo_afin_remove', { id:campoafin.id }) }}" class="btn btn-link btn-sm btn-danger"><i class="fa fa-times fa-lg"></i></a>
                                </td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
{% endblock %}