{# app/Resources/views/Security/EstatusType.html.twig #}
{% extends 'base.home.html.twig' %}
{% block title %}{{ parent() }}| ESTATUS{% endblock %}
{% block username %}
    {{ app.user.nombre }} {{ app.user.apellido }}
{% endblock %}
{% block body %}
    <div class="row mt-2">
        <div class="col-xs-12 col-sm-10 offset-md-1 col-md-8 offset-md-2 col-lg-8 offset-lg-2">
            <div class="card">
                <div class="card-header text-left text-white bg-primary">
                    <div class="h5">
                        <i class="fas fa-question-circle fa-lg"></i> Listados de Estatus
                        <a class="btn btn-sm float-right text-primary" style="background-color: whitesmoke;" href="{{ path('nuevoestatuspage') }}"><i class="fa fa-plus fa-lg"></i></a>
                    </div>
                </div>
                <div class="card-body">
                    <table class="table table-sm table-hover table-striped">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>Descripci√≥n</th>
                                <th>Controles</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for estatu in estatus %}
                                <tr>
                                    <td width="20%">{{ estatu.id }}</td>
                                    <td width="60%">{{ estatu.descripcion }}</td>
                                    <td width="20%">
                                        <a href="{{ path('estatus_edit',{id:estatu.id}) }}" class="btn btn-link btn-sm btn-primary"><i class="fa fa-edit fa-lg"></i></a>
                                        <a href="{{ path('estatus_remove',{id:estatu.id}) }}" class="btn btn-link btn-sm btn-danger"><i class="fa fa-times fa-lg"></i></a>
                                    </td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
{% endblock %}